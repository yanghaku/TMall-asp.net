@{
    Layout = null;
}
@model TMall.Models.UserLoginModel

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/facicon.png" rel="shortcut icon" type="image/x-icon" />
    <title>登录 - TMall购物,多快好省,只为品质生活</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Bundles/encrypt")
    <link href="https://cdn.bootcss.com/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/unslider/2.0.3/css/unslider.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/unslider/2.0.3/js/unslider-min.js"></script>
    <style>
        .pic{
            width: 100%;
            text-align: center;
            padding-bottom: 10px;
            padding-top: 5px;
        }
        .unslider-arrow{
            display: none;
        }
        .unslider-nav{
            display: none;
        }
        .main {
            position: absolute;
            top: 24%;
            right: 20%;
            background-color: rgba(57, 237, 239, 0.20);
            text-align: center;
            display: block;
            padding: 14px;
            width: 350px;
        }
        .main:hover, .main:active{
            background-color: ghostwhite;
        }
        .home:hover{
            background-color: ghostwhite;
        }
        .home {
            background-color: rgba(0, 0, 0, .2);
            margin-top: 5px;
        }
    </style>
</head>
<body style="background-color: #f5f5f5; height: 100%;width: 100%; padding-top: 0">
    <header id="header">
        <div class="navbar navbar-fixed-top">
            <div class="container">
                <div class="navbar-header home">
                    @Html.ActionLink("TMall", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
    </header>

    <div class="pic">
        <ul>
            <li><img src="~/Static/login2.jpg" class="" alt="pic2" /></li>
            <li><img src="~/Static/login3.jpg" class="" alt="pic3" /></li>
            <li><img src="~/Static/login4.jpg" class="" alt="pic4" /></li>
            <li><img src="~/Static/login5.jpg" class="" alt="pic5" /></li>
            <li><img src="~/Static/login6.jpg" class="" alt="pic6" /></li>
            <li><img src="~/Static/login7.jpg" class="" alt="pic7" /></li>
        </ul>
    </div>
    <div class="main">
        <h3>登录</h3>
        @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { onsubmit = "var t=$('#Passwd').val();$('#Passwd').val($.md5(t));", @class = "form-horizontal", role = "form" })) {
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-sm-3 col-md-3 control-label" })
                <div class="col-md-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Passwd, new { @class = "col-sm-3 col-md-3 control-label" })
                <div class="col-md-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Passwd, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Passwd)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Captcha, new { @class = "col-sm-3 col-md-3 control-label" })
                <div class="col-md-9 col-sm-9">
                    @Html.TextBoxFor(m => m.Captcha, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Captcha)
                </div>
            </div>
            <div class="form-group myinput">
                <div class="col-md-9 col-sm-9 col-sm-offset-2 col-md-offset-2 checkbox">
                    <label>
                    <input id="remember" name="remember" type="checkbox">记住登录状态7天
                    </label>
                </div>
            </div>
            <input hidden="hidden" name="redirectURL" value="@ViewData["redirectURL"]" />
            <div class="form-group myinput">
                <div class="col-md-5 col-md-offset-1 col-sm-offset-1 col-sm-5">
                    <img src="~/Users/Captcha" class="img-responsive" id="img" alt="Captcha" />
                </div>
                <div class="col-md-6 col-sm-6 text-left">
                    <a href="javascript:void(0);" onclick="$('#img')[0].src=$('#img')[0].src+'?'">看不清楚? 换一张</a>
                </div>
            </div>
            <div class="form-group myinput">
                <div class="col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1">
                <input class="btn btn-success btn-block" type="submit" value="登录" />
                </div>
            </div>
            <div class="form-group myinput">
                <div class="col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1">
                @Html.ActionLink("没有账号?免费注册", "Register", "Users", new { redirectURL = Request["redirectURL"] }, new { })
                </div>
            </div>
        }

    </div>


    <footer class="text-center" style="color: white; background-color: black; font-size: larger">
        <p>&copy; @DateTime.Now - TMall designed by YB</p>
        <address style="margin-bottom: 0"><strong>source: <a href="https://github.com/yanghaku/TMall-asp.net" target="_blank">https://github.com/yanghaku/TMall-asp.net</a></strong></address>
    </footer>
    <script>
        var slidey = $('.pic').unslider();
        var data = slidey.data('unslider');
        //data.start();
        setInterval(function () { data.next(); }, 2500);
        $("#Passwd").val('');
        $("#Passwd").attr('type', 'password');
    </script>
</body>
</html>
